<?xml version="1.0" encoding="UTF-8"?>
<ContentPage BackgroundColor="Gray" Title="Audio Analyzer" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:scichartshowcase.CustomViews" x:Class="scichartshowcase.TestCases.AudioAnalyzer.AudioAnalyzer">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>
        <local:SciChartSurfaceView x:Name="sampleSurface" Grid.Row="0" HorizontalOptions="Fill" VerticalOptions="Fill">
        </local:SciChartSurfaceView>
        <Grid Grid.Row="1" HorizontalOptions="Fill">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*" />
                <ColumnDefinition Width="5*" />
            </Grid.ColumnDefinitions>
            <local:SciChartSurfaceView x:Name="fftSurface" Grid.Column="0" HorizontalOptions="Fill" VerticalOptions="Fill">
            </local:SciChartSurfaceView>
            <local:SciChartSurfaceView x:Name="spectrogramSurface" Grid.Column="1" HorizontalOptions="Fill" VerticalOptions="Fill">
            </local:SciChartSurfaceView>
        </Grid>
    </Grid>
</ContentPage>